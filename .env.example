# =============================================================================
# Codex Coding Background Agent Configuration
# =============================================================================
# Copy this file to .env and configure your settings

# -----------------------------------------------------------------------------
# Git Configuration
# -----------------------------------------------------------------------------
GIT_USER_EMAIL=codex@runpod.io
GIT_USER_NAME=Codex Agent
GIT_DEFAULT_BRANCH=main

# -----------------------------------------------------------------------------
# Development Environment
# -----------------------------------------------------------------------------
# Python path and environment
PYTHON_PATH=/usr/bin/python3
VIRTUAL_ENV_PATH=.venv

# Code analysis and formatting
ENABLE_LINTING=true
ENABLE_FORMATTING=true
ENABLE_TYPE_CHECKING=true

# -----------------------------------------------------------------------------
# Project Configuration
# -----------------------------------------------------------------------------
# Project root directory
PROJECT_ROOT=/workspace

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=/workspace/logs/codex-agent.log

# -----------------------------------------------------------------------------
# Code Quality Tools
# -----------------------------------------------------------------------------
# Linting tools
LINTER_TOOLS=flake8,black,isort,mypy

# Testing configuration
TEST_FRAMEWORK=pytest
TEST_COVERAGE_THRESHOLD=80

# Documentation
DOC_FORMAT=markdown
DOC_GENERATOR=sphinx

# -----------------------------------------------------------------------------
# Repository Management
# -----------------------------------------------------------------------------
# Default remote repository
DEFAULT_REMOTE=origin
DEFAULT_BRANCH=main

# Auto-commit settings
AUTO_COMMIT=false
COMMIT_MESSAGE_PREFIX="codex:"

# -----------------------------------------------------------------------------
# Development Tools
# -----------------------------------------------------------------------------
# Code analysis
ENABLE_COMPLEXITY_ANALYSIS=true
MAX_COMPLEXITY=10

# Security scanning
ENABLE_SECURITY_SCAN=true
SECURITY_TOOLS=bandit,safety

# -----------------------------------------------------------------------------
# Performance Monitoring
# -----------------------------------------------------------------------------
# Memory usage monitoring
MONITOR_MEMORY=true
MAX_MEMORY_MB=2048

# CPU usage monitoring
MONITOR_CPU=true
MAX_CPU_PERCENT=80

# -----------------------------------------------------------------------------
# File Management
# -----------------------------------------------------------------------------
# Temporary files cleanup
CLEANUP_TEMP_FILES=true
TEMP_FILE_AGE_HOURS=24

# Backup configuration
ENABLE_BACKUP=true
BACKUP_RETENTION_DAYS=7

# -----------------------------------------------------------------------------
# Network Configuration
# -----------------------------------------------------------------------------
# Timeout settings
REQUEST_TIMEOUT=30
CONNECTION_TIMEOUT=10

# Retry configuration
MAX_RETRIES=3
RETRY_DELAY=2

# -----------------------------------------------------------------------------
# Debugging
# -----------------------------------------------------------------------------
# Debug mode
DEBUG_MODE=false

# Verbose logging
VERBOSE_LOGGING=false

# Trace execution
TRACE_EXECUTION=false